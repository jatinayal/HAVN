<% layout("/layouts/boilerplate") %>
<body class="form-body">
  <div class="container">
    <div class="form-container">
      <h3 class="form-title">Edit Your Listing</h3>
      <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
          <label class="form-label">Title</label>
          <input name="listing[title]" type="text" value="<%= listing.title %>" class="form-control" required>
           <div class="valid-feedback">Title looks good!</div>
           <div class="invalid-feedback">enter a valid Title</div>
        </div>

        <div class="mb-3">
          <label class="form-label">Description</label>
          <textarea name="listing[description]" class="form-control" rows="3" required><%= listing.description %></textarea>
        <div class="valid-feedback">Description looks good!</div>
           <div class="invalid-feedback">enter a valid and short Description</div>
        </div>
        <div class="mb-3">
          Original Listing Image <br/>
          <img class="preview-edit-image" src="<%=  originalImageUrl %>">
        </div>
        <div class="mb-3">
          <label for="image" class="form-label">Upload New Image</label>
          <input name="listing[image]" type="file" value="<%= listing.image %>" class="form-control">
        <div class="valid-feedback">Superb Image!</div>
        </div>

        <div class="mb-3">
          <label class="form-label">Price (per night)</label>
          <input name="listing[price]" type="number" value="<%= listing.price %>" class="form-control" required>
         <div class="valid-feedback">Price looks good!</div>
           <div class="invalid-feedback">enter a valid Price</div>
       </div>

        <div class="mb-3">
          <label class="form-label">Country</label>
          <input name="listing[country]" type="text" value="<%= listing.country %>" class="form-control" required>
         <div class="valid-feedback">beautiful country!</div>
           <div class="invalid-feedback">enter a valid Country</div>
        </div>

        <div class="mb-3">
          <label class="form-label">Location</label>
          <div class="valid-feedback">Nice Location!</div>
           <div class="invalid-feedback">enter a valid Location</div>
        <input name="listing[location]" type="text" value="<%= listing.location %>" class="form-control" required>
        </div>

        <div class="text-center">
          <button class="btn form-btn-primary px-4" type="submit">Update Listing</button>
        </div>
      </form>
    </div>
  </div>
</body>
