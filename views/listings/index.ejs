<% layout("/layouts/boilerplate") %>
<body>
   <div class="mini-navbar">
  <div class="category-scroll">
    <div class="category-item"><i class="fas fa-tractor"></i><span>Farms</span></div>
    <div class="category-item"><i class="fas fa-bed"></i><span>Rooms</span></div>
    <div class="category-item"><i class="fas fa-image"></i><span>Views</span></div>
    <div class="category-item"><i class="fas fa-city"></i><span>Cities</span></div>
    <div class="category-item"><i class="fas fa-water"></i><span>Surfing</span></div>
    <div class="category-item"><i class="fas fa-swimmer"></i><span>Pools</span></div>
    <div class="category-item"><i class="fas fa-umbrella-beach"></i><span>Beach</span></div>
    <div class="category-item"><i class="fa-solid fa-person-shelter"></i></i><span>Cabins</span></div>
    <div class="category-item"><i class="fas fa-star"></i><span>OMG!</span></div>
    <div class="category-item"><i class="fas fa-water"></i><span>Lakefront</span></div>
  

  <div class="toggle-wrapper tax-toggle">
    <label for="tax-toggle">Display total after taxes</label>
    <label class="toggle-switch">
      <input type="checkbox" id="tax-toggle">
      <span class="slider"></span>
    </label>
  </div></div>
</div>

    <!-- <h3>All Listings</h3> -->
    <!-- <form method="GET" action="/listings/new">
        <button>Create New Listing</button>
    </form> -->
  <div class="row row-cols-lg-4 row-cols-sm-2 row-cols-2 g-3 mt-4">
  <% for (let listing of allListings) { %>
    <div class="col">
        <a href="/listings/<%= listing._id %>" class="listing-link">
      <div class="card listing-card h-100 shadow-sm border-0 rounded-4 position-relative">

        <!-- Image -->
        <img src="<%= listing.image.url %>" class="card-img-top listing-img rounded-4" alt="Listing Image">

        <!-- Card Body -->
        <div class="card-body d-flex flex-column justify-content-between">
          <div>
            <!-- Title & Rating -->
            <div class="d-flex justify-content-between align-items-start mb-1">
              <h6 class="text-dark mb-0 fw-semibold text-truncate pe-2" style="max-width: 70%;">
                <%= listing.title %>
              </h6>
              <span class="text-muted small flex-shrink-0">
                <i class="fa-solid fa-star text-warning me-1"></i><%= listing.rating %>
              </span>
            </div>

            <!-- Location -->
            <p class="text-muted small mb-2"><%= listing.location %></p>
          </div>

          <!-- Price -->
          <div>
            <strong class="text-dark">&#8377;<%= listing.price.toLocaleString("en-IN") %></strong>
            <span class="text-muted">/night</span><i class="tax-info"> +18% GST</i>
          </div>
        </div>

      </div>
      </a>
    </div>
  <% } %>
</div>


<script>
 let toggleSwitch = document.getElementById("tax-toggle");
 toggleSwitch.addEventListener("click", ()=>{
  let taxInfo = document.getElementsByClassName("tax-info");
  for(info of taxInfo){
    if(info.style.display != "inline"){
      info.style.display = "inline";
    } else{
      info.style.display = "none"
    }
    
  }
 })
</script>
</body>
